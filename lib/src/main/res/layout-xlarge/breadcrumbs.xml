<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/breadcrumb_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/breadcrumbs_padding_end"
    android:layout_marginLeft="@dimen/breadcrumbs_padding_start"
    android:layout_marginRight="@dimen/breadcrumbs_padding_end"
    android:layout_marginStart="@dimen/breadcrumbs_padding_start"
    android:orientation="vertical"
    >

    <android.app.FragmentBreadCrumbs
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical|start"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        />
</LinearLayout>
